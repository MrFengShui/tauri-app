{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "cli": {
        "analytics": false,
        "cache": {
            "enabled": false
        },
        "packageManager": "npm"
    },
    "projects": {
        "tauri-app": {
            "i18n": {
                "sourceLocale": "en-US",
                "locales": {
                    "zh-hans": {
                        "translation": "src/locale/messages.zh-hans.json"
                    },
                    "zh-hant": {
                        "translation": "src/locale/messages.zh-hant.json"
                    }
                }
            },
            "projectType": "application",
            "root": "",
            "sourceRoot": "src",
            "prefix": "tauri-app",
            "architect": {
                "build": {
                    "builder": "ngx-build-plus:browser",
                    "options": {
                        "baseHref": "/tauri-ngx/web/zh-hans/",
                        "outputPath": "docs/web/zh-hans",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": [
                            "zone.js"
                        ],
                        "localize": true,
                        "i18nMissingTranslation": "error",
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/assets",
                            "src/config",
                            "src/storage",
                            "src/favicon.ico",
                            {
                                "glob": "**/*",
                                "input": "src/assets/",
                                "output": "/assets/"
                            },
                            {
                                "glob": "**/*",
                                "input": "src/config/",
                                "output": "/config/"
                            },
                            {
                                "glob": "**/*",
                                "input": "src/storage/",
                                "output": "/storage/"
                            },
                            {
                                "glob": "favicon.ico",
                                "input": "src/",
                                "output": "/"
                            }
                        ],
                        "styles": [
                            "src/styles.scss"
                        ],
                        "sourceMap": true,
                        "progress": true,
                        "verbose": true
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2mb",
                                    "maximumError": "4mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "256kb",
                                    "maximumError": "512kb"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": true,
                            "extractLicenses": true,
                            "sourceMap": true
                        },
                        "locale-zh-hans": {
                            "localize": ["zh-hans"]
                        },
                        "locale-zh-hant": {
                            "localize": ["zh-hant"]
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "ngx-build-plus:dev-server",
                    "options": {
                        "servePath": "/tauri-ngx/web/",
                        "port": 4200,
                        "ssl": true,
                        "verbose": true
                    },
                    "configurations": {
                        "production": {
                            "buildTarget": "tauri-app:build:production"
                        },
                        "development": {
                            "buildTarget": "tauri-app:build:development"
                        },
                        "locale-zh-hans": {
                            "buildTarget": "tauri-app:build:locale-zh-hans"
                        },
                        "locale-zh-hant": {
                            "buildTarget": "tauri-app:build:locale-zh-hant"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": [
                            "src/**/*.ts",
                            "src/**/*.html"
                        ]
                    }
                },
                "extract-i18n": {
                    "builder": "ngx-build-plus:extract-i18n",
                    "options": {
                        "buildTarget": "tauri-app:build",
                        "format": "json",
                        "outputPath": "src/locale",
                        "outFile": "messages.en-US.json"
                    }
                }
            }
        }
    }
}